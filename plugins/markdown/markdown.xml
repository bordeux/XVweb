<?xml version="1.0" encoding="utf-8"?>
<plugin>
  <info>
    <name>Markdown</name>
    <version>1.0</version>
    <author>Krzysztof Bednarczyk</author>
    <url>http://www.bordeux.net</url>
    <description>Markdown parser for XVweb. For use: &lt;markdown&gt; **markdown** &lt;/markdown&gt;</description>
  </info>
  <config>
    <parser>
      <function tag="markdown">	
	  <![CDATA[
	include_once($GLOBALS['$RootDir'].'plugins/markdown/markdown.php');
	pq($element)->replaceWith(Markdown(pq($element)->html()));
	]]>
	</function>
    </parser>
  </config>
</plugin>