<?xml version="1.0" encoding="utf-8"?>
<plugin>
  <info>
    <name>Textile</name>
    <version>1.0</version>
    <author>Krzysztof Bednarczyk</author>
    <url>http://www.bordeux.net</url>
    <description>Textile parser for XVweb. For use: &lt;textile&gt;textile markdown&lt;/textile&gt;</description>
  </info>
  <config>
    <parser>
      <function tag="textile">	
	  <![CDATA[
	include_once(ROOT_DIR.'plugins/textile/classTextile.php');
	$textile = new Textile();
	pq($element)->replaceWith($textile->TextileThis(pq($element)->html())) ;
	]]>
	</function>
    </parser>
  </config>
</plugin>